<%-include('./Partials/header.ejs')-%>
<div class="ui container fluid inverted segment">
	<span class="ui huge floated left header">Update Blog</span>
     <span class="ui floated right">
       <a class="ui red button" href="/blog">All Blog</a>
     </span>
</div>
<div class="ui container">
	<form method="POST" action="/show/<%= blog._id %>/update?_method=PUT">
		<div class="ui form">
		  <div class="field">
		    <label>Name</label>
		    <input type="text" name="name" value="<%= blog.name %>" placeholder="Name">
		  </div>
		  <div class="field">
		    <label>image</label>
		    <input type="text" name="image" value="<%= blog.image %>" placeholder="Image Url">
		  </div>
		  <div class="field">
		    <label>desc</label>
		    <textarea rows="4" name="desc"><%= blog.desc %></textarea>
		  </div>
		  <button class="ui submit button" type="submit">Update</button>
		</div>
	</form>
</div>

<%-include('./Partials/footer.ejs')-%>